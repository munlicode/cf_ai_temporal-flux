{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext"],
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true // Recommended for compatibility
  },
  "include": ["src/**/*", "env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
